{
  "name": "trilio",
  "version": "3.0.0",
  "description": "Trilio Landing Page",
  "author": "Milan Pjevic",
  "main": "index.js",
  "scripts": {
  "sass": "sass sass/main.scss:css/style.css --no-source-map --watch",
  "css": "postcss css/style.css --use autoprefixer cssnano -d css/",
  "serve": "browser-sync start --server '.' --files 'css/style.css, index.html'",
  "dev": "npm run sass && npm run css && npm run serve"
  },
  "devDependencies": {
    "browser-sync": "^2.27.7",
    "cssnano": "^5.1.4",
    "postcss": "^8.4.24",
    "autoprefixer": "^10.4.7",
    "sass": "^1.56.1"
  },
  "dependencies": {}
}
